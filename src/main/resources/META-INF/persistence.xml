<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">
    <persistence-unit name="Recherche">
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Candidats</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Competences</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Demande</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Diplomes</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Entreprise</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Experience</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Offres</class>
        <class>ma.ac.iga.pfemoteurrechercheemploi.entities.Categorie</class>


        <properties>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/recherche_emplois"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value=""/>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5Dialect"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>

    </persistence-unit>
</persistence>




