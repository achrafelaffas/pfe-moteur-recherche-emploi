<script>
    function updateFunction(id, nom){
        document.getElementById("idCatUpdate").value = id;
        document.getElementById("nomCategoerieUpdate").value = nom;
        var modal = new bootstrap.Modal(document.getElementById('exampleModalUpdate'));
        modal.show();
    }

</script>

<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Ajouter categorie</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                   <%-- <span aria-hidden="true">&times;</span>--%>
                </button>
            </div>
            <form method="post" action="CategorieServlet?action=save">
            <div class="modal-body">
                    <div class="form-group">
                        <label for="nomCategoerie" class="col-form-label">Categorie:</label>
                        <input type="text" class="form-control" id="nomCategoerie" name="nom" required>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                <button type="submit" class="btn btn-primary">Ajouter</button>
            </div>
            </form>
        </div>
    </div>
</div>

